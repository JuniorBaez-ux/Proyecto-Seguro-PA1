<Window x:Class="Proyecto_Seguro_PA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Seguro_PA1"
        mc:Ignorable="d"
        Title="Sistema de Seguros" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <Menu Height = "51" >

                <MenuItem Header ="Registros" >
                    <MenuItem x:Name = "Registro" Click="Registro_Click" Header = "Registro de Clientes" ></MenuItem>
                    <MenuItem x:Name="Registro_vehiculos"  Click="Registro_vehiculos_Click" Header="Registro de Vehiculos"></MenuItem>
                </MenuItem>

                <MenuItem Header = "Consultas" >
                    <MenuItem x:Name = "Consultas" Click="Consultas_Click" Header = "Consulta de Clientes" ></MenuItem>
                    <MenuItem x:Name="Consulta_vehiculos"  Click="Consulta_vehiculos_Click" Header="Consulta de Vehiculos"></MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
